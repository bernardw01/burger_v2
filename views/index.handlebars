<h1>EAT DAT BURGER!</h1>


<div class="container">
    <div class="row">

        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Add a Burger</h3>
                </div>
                <div class="panel-body">
                    <form class="create-update-form" action="/" method="POST">

                        <div class="form-group">
                            <label for="bn">Burger Name:</label>
                            <input type="text" id="burger_name" name="burger_name">
                        </div>

                        <div class="form-group">
                            <label for="devoured">Devoured?</label><br>
                            <input type="radio" name="devoured" value="1" > Devoured!<br>
                            <input type="radio" name="devoured" value="0" checked> Not Eaten Yet
                        </div>

                        <button type="submit">Add Burger</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Burgers Ready to Eat</h3>
                </div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                            {{#unless this.devoured}}
                                <li>

                                    <form action="/update" method="POST">
                                        <input type="hidden" name="devoured" value="1">
                                        <input type="hidden" name="burger_id" value="{{this.id}}">
                                        <div class="buttonRight">
                                            {{this.burger_name}}
                                            <button class="btn btn-primary btn-sm devoured" type="submit">Devour!</button>
                                        </div>
                                    </form>
                                </li>
                            {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Previously Devoured Burgers</h3>
                </div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                            {{#if this.devoured}}
                                <li>
                                    {{this.burger_name}}

                                    <form action="/{{this.id}}?_method=PUT" method="POST">
                                        <input type="hidden" name="devoured" value="false">

                                    </form>
                                </li>
                            {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>



    </div>
</div>



